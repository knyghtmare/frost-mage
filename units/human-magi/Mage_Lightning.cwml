#textdomain wesnoth-Frost_Mage

#define ELDER_MAGE_LIGHTNING2 DIRECTION_NUMBER
    [attack_anim]
        [filter_attack name=lightning]

        {LIGHTNING_BOLT {DIRECTION_NUMBER} }

        start_time=-300
        {SOUND:HIT_AND_MISS lightning.ogg lightning-miss.ogg -300}
        [frame image="units/human-magi/elder-mage-ranged[1~3,2,1].png:[100*2,200,100,50]"]
    [/attack_anim]
#enddef

[unit_type]
    id=Lightning Mage
    name= _ "Lightning Mage"
    race=human
    image="units/human-magi/elder-mage.png"
    profile="portraits/humans/mage-arch.webp"
    {DEFENSE_ANIM "units/human-magi/elder-mage-defend.png" "units/human-magi/elder-mage.png" {SOUND_LIST:HUMAN_OLD_HIT} }
    hitpoints=60
    movement_type=smallfoot
    [resistance fire=80]
    movement=6
    experience=250
    level=5
    alignment=neutral
    advances_to=null
    {AMLA_DEFAULT}
    cost=90
    usage=mixed fighter
    die_sound={SOUND_LIST:HUMAN_OLD_DIE}
    description= _ "Once great, Elder Magi have seen their power a little diminished from wearying years of battle. Nevertheless they remain feared on the battlefield on account of their powerful lightning bolts."
    [attack]
        name=staff
        description= _"electrum staff"
        icon=attacks/staff-magic.png
        type=impact
        range=melee
        damage=8
        number=2
    [/attack]
    [attack]
        name=lightning
        description= _"lightning"
        icon=attacks/lightning.png~BLEND(255,0,255,0.3)
        type=electric
        range=ranged
        [specials magical]
        damage=14
        number=4
    [/attack]

    [attack_anim]
        [filter_attack name=staff]
        start_time=-225
        [frame image="units/human-magi/elder-mage-ranged1.png:25"]
        [frame image="units/human-magi/elder-mage-melee[1~2].png:[100,200]"]
        {SOUND:HIT_AND_MISS staff.ogg staff-miss.ogg -125}
        [frame image="units/human-magi/elder-mage-ranged1.png:50"]
        [frame image="units/human-magi/elder-mage.png:50"]
    [/attack_anim]

    {ELDER_MAGE_LIGHTNING2 1}
    {ELDER_MAGE_LIGHTNING2 2}
    {ELDER_MAGE_LIGHTNING2 3}
[/unit_type]

#undef ELDER_MAGE_LIGHTNING2
